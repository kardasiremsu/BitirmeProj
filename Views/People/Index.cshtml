                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="Degree">Degree:</label>
                                    <select id="Degree" name="Degree" class="form-control" required>
                                        <option value="">Select Degree</option>
                                        <option value="Associate">Associate</option>
                                        <option value="Bachelor">Bachelor's</option>
                                        <option value="Master">Master's</option>
                                        <option value="Doctorate">Doctorate</option>
                                        <!-- Add other degree options as needed -->
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="GraduationYear">Graduation Year:</label>
                                    <input type="text" id="GraduationYear" name="GraduationYear" class="form-control" placeholder="Enter Graduation Year" required>
                                </div>
                                <!-- Add other fields as needed -->
                                <button type="submit" class="btn btn-primary">Add School</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

